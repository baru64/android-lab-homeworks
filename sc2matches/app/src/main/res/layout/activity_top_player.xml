<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sc2matches.TopPlayerActivity">

    <fragment
        android:id="@+id/fragmentTopPlayer"
        android:name="com.example.sc2matches.topPlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="277dp" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentTopPlayer"
        app:layout_constraintEnd_toEndOf="@+id/fragmentTopPlayer"
        app:layout_constraintStart_toStartOf="@+id/fragmentTopPlayer"
        app:layout_constraintTop_toTopOf="@+id/fragmentTopPlayer" />
</android.support.constraint.ConstraintLayout>
